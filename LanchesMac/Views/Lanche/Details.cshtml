@model Lanche

<div class="container text-center">
    <div class="card text-light" style="background-color: #192023">
        <div class="row">
            <div class="col-sm-6">
                <h3> @Model.Nome</h3>
            </div>
            <div class="col-sm-6">
                <h3>Descrição Detalhada</h3>
            </div>
        </div>
    </div>
    <div style="margin:10px">
        <div class="row">
            <div class="col-sm-6">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="" />
            </div>
            <div class="col-sm-6" style="padding-top:5%">
                <b>@Model.DescricaoDetalhada</b>
            </div>
        </div>
        <div style="margin:10px">
            <div class="row">
                <div class="col-sm-2">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">
                        Ver todos os lanches
                    </a>
                </div>
                <div class="col-sm-8 text-start">
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                        Adicionar @Model.Nome ao carrinho
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>