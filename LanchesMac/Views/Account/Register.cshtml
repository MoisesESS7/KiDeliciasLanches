@model LoginViewModel
<div class="container-fluid">
    <div class="row">
        <div class="col-3 text-end">
            <img src="~/Imagens/registro1.jpg" class="center-block img-fluid" style="width:200px" />
        </div>
        <div class=" col-6 col-md-6 col-lg-6">
            <table class=" table rounded-3" style="background-color: #192023; color:white">
                <tr>
                    <td>
                        <h4 class="text-center">Registrar Usuário</h4>
                        <form asp-controller="Account" asp-action="Register" method="post">
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="UserName"> </label>
                                <input asp-for="UserName" class="form-control" placeholder="name@example.com" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" placeholder="Senha" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <p>Sua senha deve ter de 6 a 20 caracteres, conter letras e números e não deve conter espaços, caracteres especiais ou emojis.</p>
                            </div>
                            <div class="form-group text-center">                                
                                <input type="submit" class="btn btn-success" value="Registrar" />
                            </div>
                        </form>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>