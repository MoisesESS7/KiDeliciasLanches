@model Pedido

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container-fluid">
    <div class="row">
        <div class="card text-white" style="padding:10px; background-color:#192023">
            <div class="text-center">
                <h3>Detalhes do Pedido</h3>
            </div>
            <div class="card" style="padding:10px; border-color:white; background-color: #192023">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SobreNome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SobreNome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Endereco1)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Endereco1)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Endereco2)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Endereco2)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cep)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cep)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Estado)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Estado)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cidade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cidade)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PedidoEnviado)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PedidoEnviado)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PedidoEntregueEm)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PedidoEntregueEm)
                    </dd>
                </dl>
                <p class="border-bottom" style="color:white"></p>
                <div class="row">
                    <div class="col-6-sm col-md-6 col-lg-6 text-start">
                        <a asp-action="Edit" asp-route-id="@Model?.PedidoId" class="btn btn-outline-warning">Editar</a>
                    </div>
                    <div class="col-6-sm col-md-6 col-lg-6 text-end">
                        <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

