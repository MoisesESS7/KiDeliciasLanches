@model Pedido

@{
    ViewData["Title"] = "Edit";
}

<div class="card text-white" style="padding:10px; background-color: #192023">
    <h3>Editar Pedido</h3>
    <div class="card" style="padding:10px; border-color:white; background-color: #192023">
        <form asp-action="Edit">
            <partial name="_FormularioPedido" />            
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="PedidoEnviado" class="control-label"></label>
                    <input asp-for="PedidoEnviado" class="form-control" placeholder="DD/MM/AAAA 00:00" id="PedidoEnviado" />
                    <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PedidoEntregueEm" class="control-label"></label>
                    <input asp-for="PedidoEntregueEm" class="form-control" placeholder="DD/MM/AAAA 00:00" id="PedidoEntregueEm" />
                    <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6 text-start">
                    <input type="hidden" asp-for="PedidoId" />
                    <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                </div>
                <div class="form-group col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
                </div>
            </div>
        </form>
    </div>
</div>
