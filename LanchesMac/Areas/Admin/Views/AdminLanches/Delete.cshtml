@model Lanche

@{
    ViewData["Title"] = "Deletar Produto";
}

<div class="container-fluid">
    <div class="row">
        <div class="card text-white" style="padding:10px; background-color:#192023">
            <div class="text-center">
                <h3>Tem certeza de que deseja deletar este Produto?</h3>
            </div>
            <div class="card" style="padding:10px; border-color:white; background-color: #192023">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DescricaoCurta)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DescricaoDetalhada)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DescricaoDetalhada)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Preco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Preco)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImagemUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImagemUrl)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImagemThumbnailUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImagemThumbnailUrl)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsLanchePreferido)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsLanchePreferido)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.EmEstoque)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EmEstoque)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Categoria.CategoriaNome)
                    </dd>
                </dl>
                <p class="border-bottom" style="color:white"></p>
                <form asp-action="Delete">
                    <div class="row">
                        <div class="col-sm-6 text-start">
                            <input type="hidden" asp-for="LancheId" />
                            <input type="submit" value="Deletar" class="btn btn-outline-danger" />
                        </div>
                        <div class="col-sm-6 text-end">
                            <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
