@model ReflectionIT.Mvc.Paging.PagingList<Lanche>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container-fluid">
    <div class="row">
        <div class="card text-white" style="background-color:#192023; padding:10px; width:100%">
            <h3>Lanches</h3>
            <form method="get" class="form-inline">
                <div class="row">
                    <div class="col-sm-4" style="padding-bottom:10px">
                        <input name="filter" class="form-control" placeholder="Buscar Produto"
                               value="@Model.RouteValue["Filter"]" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <button type="submit" class="btn btn-outline-info"> Buscar</button>
                    </div>
                </div>
            </form>
            <br />
            Total de Laches : @Model.TotalRecordCount
            <div>
                <vc:pager paging-list="@Model"></vc:pager>
            </div>
            <p>
                <a asp-action="Create" class="btn btn-outline-primary">Criar Produto</a>&nbsp;
                <a asp-controller="AdminLanchesReport" asp-action="LanchesCategoriaReport" class="btn btn-outline-light">Gerar Relatório</a>&nbsp;
                <a asp-controller="AdminLanchesReport" asp-action="LanchesCategoriaPdf" class="btn btn-outline-light">Gerar PDF</a>
            </p>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div style="overflow-x: auto;">
                        <table class="table table-striped table-hover table-dark">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Preco)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsLanchePreferido)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmEstoque)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Categoria)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DescricaoCurta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Preco)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmEstoque)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.LancheId" class="text-warning">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.LancheId" class="text-primary">Detalhes</a> |
                                            <a asp-action="Delete" asp-route-id="@item.LancheId" class="text-danger">Deletar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>