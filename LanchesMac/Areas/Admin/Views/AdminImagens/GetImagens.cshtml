@model FileManagerModel

@{
    ViewBag.Title = "Arquivos";
}

<div class="card" style="background-color: black; padding:5px">
    <div class="card" style="background-color: white; padding:10px">
        <div style="overflow-x: auto;">
            <div class="row text-center">
                <h3>Todas as Imagens</h3>
            </div>
            @if (Model.Files != null)
            {
                var caminho = Model.PathImagesProduto;
                <div class="row">
                    @foreach (FileInfo file in Model.Files)
                    {
                        <div class="col-1" style="margin:16px">
                            <img src="~/@caminho/@file.Name" width="125" height="125" style="min-width:40px; min-height:40px" class="img-fluid">
                            <div style="padding:10px; text-align:center">
                                <a href="@Url.Action("Deletefile", "AdminImagens", new {fname=file.Name})" class="d-flex">Excluir</a>
                            </div>
                        </div>

                    }
                </div>
            }
        </div>
    </div>
    <div class="card" style="background-color: white; padding:10px; margin-top: 5px">
        <div class="row">
            <div class="text-center">
                <a asp-area="Admin" asp-controller="AdminImagens" asp-action="Index" class="text-info"><h3>Voltar</h3></a>
            </div>
        </div>
    </div>
</div>
