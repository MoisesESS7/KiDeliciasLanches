
<div class="card" style="background-color: black; padding:5px">
    <div class="card" style="background-color: white; padding:10px">
        <div style="overflow-x: auto;">
            <table width="100%">
                <tr>
                    <td>
                        <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens"
                              asp-action="UploadFiles">
                            <img src="~/Imagens/upload2.png" width="200" height="150" class="img-fluid"/>
                            <div class="form-group">
                                <div class="coll-md-10">
                                    <p><h5>Selecione um ou mais arquivos para enviar :</h5></p>
                                    <p><h5>(Arquivos com o mesmo nome serão sobrescritos)</h5></p>
                                    <input type="file" name="files" multiple class="button btn-secondary"/>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3 col-md-3 col-lg-3 d-flex">
                                        <input type="submit" value="Enviar Arquivo(s)" class="button btn-primary" />
                                    
                                        <a asp-action="Index"><img src="~/imagens/limpar.png" class="img-fluid" style="margin-left:40px; max-height:30px; max-width:38px" /></a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </td>
                    <td>
                        <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens"
                              asp-action="GetImagens">
                            <img src="~/Imagens/visualizar1.jpg" width="235" height="235" class="img-fluid"/>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p><h5>Visualizar Imagens na pasta do servidor :</h5></p>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Ver Arquivos no Servidor" class="button btn-primary" />
                                </div>
                            </div>
                        </form>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="card" style="background-color: white; padding:5px; margin-top:5px">
        <div class="container">
            <ul>
                @if (ViewData["Deletado"] != null)
                {
                    <li>@ViewData["Deletado"]</li>
                }
            </ul>
        </div>
    </div>
</div>