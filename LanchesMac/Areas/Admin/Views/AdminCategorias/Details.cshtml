@model Categoria

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container-fluid">
    <div class="row">
        <div class="card text-white" style="padding:10px; background-color:#192023">
            <div class="text-center">
                <h3>Detalhes da Categoria</h3>
            </div>
            <div class="card" style="padding:10px; border-color:white; background-color: #192023">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CategoriaNome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoriaNome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                </dl>
                <p class="border-bottom" style="color:white"></p>
                <div class="row">
                    <div class="col-sm-6 text-start">
                        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-outline-warning">Editar</a>
                    </div>
                    <div class="col-sm-6 text-end">
                        <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
