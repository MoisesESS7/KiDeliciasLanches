@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<div class="container-fluid">
    <div class="row">
        <div class="card text-white" style="background-color:#192023; padding:10px; width:100%">
            <h3>Categorias</h3>
            <br />
            <p>
                <a asp-action="Create" class="btn btn-outline-primary">Criar Categoria</a>
            </p>
            <div style="overflow-x: auto;">
                <table class="table table-striped table-hover table-dark">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoriaNome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoriaNome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="text-warning">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.CategoriaId" class="text-primary">Detalhes</a> |
                                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="text-danger">Deletar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
