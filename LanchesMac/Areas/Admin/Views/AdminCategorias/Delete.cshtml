@model Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<div class="container-fluid">
    <div class="row">
        <div class="card text-white" style="padding:10px; background-color:#192023">
            <div class="text-center">
                <h3>Tem certeza de que deseja deletar esta Categoria?</h3>
            </div>
            <div class="card" style="padding:10px; border-color:white; background-color: #192023">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CategoriaNome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoriaNome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <p class="border-bottom" style="color:white"></p>
                    <div class="row">
                        <div class="col-sm-6 text-start">
                            <input type="hidden" asp-for="CategoriaId" />
                            <input type="submit" value="Deletar" class="btn btn-outline-danger" />
                        </div>
                        <div class="col-sm-6 text-end">
                            <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
